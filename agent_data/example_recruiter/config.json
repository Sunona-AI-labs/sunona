            "stt": "Change 'transcriber.provider' to: deepgram, groq, assemblyai, openai"
        },
        "free_options": {
            "llm": "openrouter/mistralai/mistral-7b-instruct:free (FREE tier)",
            "tts": "edge_tts (FREE unlimited, no API key needed!)",
            "stt": "groq/whisper-large-v3 (FREE tier available)"
        },
        "recommended_production": {
            "llm": "openrouter/anthropic/claude-3.5-sonnet OR groq/llama-3.1-70b-versatile",
            "tts": "elevenlabs (best quality) OR deepgram/aura (low latency)",
            "stt": "deepgram/nova-2 (best accuracy) OR groq/whisper (cheapest)"
        }
