ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_VOICE_NAME=Sarah

# Dashboard: https://play.cartesia.ai/console
CARTESIA_API_KEY=

# =============================================================================
# 4. TELEPHONY & CONNECTIVITY
# =============================================================================
