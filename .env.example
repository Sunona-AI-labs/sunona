TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WEBHOOK_URL=https://your-ngrok-url.ngrok-free.dev

# =============================================================================
# 5. CORE SYSTEM SETTINGS
# =============================================================================
SUNONA_HOST=0.0.0.0
SUNONA_PORT=8000
SUNONA_DEBUG=true
SUNONA_LOG_LEVEL=INFO
ALLOWED_ORIGINS=["*"]

# =============================================================================
# 6. PERSISTENCE & ANALYTICS
# =============================================================================
DATABASE_URL=postgresql://user:pass@localhost:5432/sunona
REDIS_URL=redis://localhost:6379/0

